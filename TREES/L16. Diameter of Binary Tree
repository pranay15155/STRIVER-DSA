https://leetcode.com/problems/diameter-of-binary-tree/description/

class Solution {
public:
    int f(TreeNode* root,int &ans){
        if(!root)return 0;
        int l=f(root->left,ans);
        int r=f(root->right,ans);
        ans=max(ans,l+r);
        return max(l,r)+1;
    }
    int diameterOfBinaryTree(TreeNode* root) {
        int ans=0;
        f(root,ans);
        return ans;

    }
};
