https://leetcode.com/problems/balanced-binary-tree/

class Solution {
public:
    int maxDepth(TreeNode* root) {
        if(!root)return 0;
        int l=maxDepth(root->left);
        if(l==-1)return -1;
        int r=maxDepth(root->right);
        if(r==-1)return -1;
        if(abs(l-r)>1)return -1;
        return max(l,r)+1;
    }
    bool isBalanced(TreeNode* root) {
        int t=maxDepth(root);
        if(t==-1)return 0;
        return 1;
    }
};
